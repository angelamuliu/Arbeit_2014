<%= simple_form_for @project, :html => { :class => 'form-horizontal' } do |f| %>
  <fieldset>
    <legend><%= controller.action_name.capitalize %> Project</legend>

		<%= f.input :name, input_html: {class: "avg"} %>
		<%= f.input :manager_id, collection: User.active.alphabetical, include_blank: true, input_html: {class: "avg"} %>
		<%= f.input :start_date, label: "Start Date", as: :string, :input_html => {:class => "avg datepicker"} %>		
		<%= f.input :end_date, label: "End Date", as: :string, :input_html => {:class => "avg datepicker"} %>
		<%= f.input :domain_id, collection: Domain.active.alphabetical, include_blank: true, input_html: {class: "avg"} %>
		<%= f.input :description, input_html: { :rows => 4, class: "avg" } %>

    <div class="form-actions">
      <%= f.submit nil, :class => 'button radius' %>
      <%= link_to 'Cancel', projects_path, :class => 'button alert radius' %>
    </div>
  </fieldset>
<% end %>
