<div class="row">
  <div class="small-8 columns">
    <% if @domains.empty? %>
      <h3>No domains at this time</h3>
    <% else %>
      <h3>List of Domains</h3>
      <%= render :partial => "list_domains" %>
    <% end %>
  </div>
  <!-- <div class="small-1 columns">&nbsp;</div> -->
  <div class="small-4 columns">
    <%= render :partial => "inactive_domains" %>
  </div>
</div>

<!-- Add a button for new domains -->
<%= link_to(new_domain_path, class: "button radius") do %>
  <i class="fa fa-plus"></i>
  &nbsp;Add a New Domain
<% end %>

